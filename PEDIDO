CREATE TABLE TEMPORAL_PEDIDO(
	ID_PRODUCTO INT NOT NULL,
	NOMBRE VARCHAR2(50) NOT NULL,
	PRECIO FLOAT NOT NULL,
	PRECIO_TOTAL NOT NULL,
	CANTIDAD NUMBER NOT NULL
);

PROCEDURE AGREGAR_PEDIDO(ID_PRODUCTO NUMBER,NOMBRE VARCHAR2,PRECIO FLOAT,CANTIDAD NUMBER)
        AS
        BEGIN   
            INSERT INTO TEMPORAL_PEDIDO(ID_PRODUCTO,NOMBRE,PRECIO,PRECIO_TOTAL, CANTIDAD) VALUES (ID_PRODUCTO,NOMBRE,PRECIO,PRECIO*CANTIDAD, CANTIDAD);
      END;

PROCEDURE AGREGAR_TABLA_PEDIDOS(ID_CLIENTE NUMBER,TOTAL FLOAT,FECHA VARCHAR2,HORA VARCHAR2)
        AS
        BEGIN   
            INSERT INTO PEDIDO (ID_CLIENTE,TOTAL,FECHA,HORA) VALUES (ID_CLIENTE,TOTAL,FECHA,HORA);
      END;
      
TOTAL PARA LA TABLA PEDIDO**SELECT SUM((PRECIO*CANTIDAD)) FROM TEMPORAL_PEDIDO;

CREATE OR REPLACE FUNCTION TOTAL_CAJA (FECHA_HOY VARCHAR2)
RETURN FLOAT
IS 
CANTIDAD FLOAT;
BEGIN 
	
SELECT SUM(TOTAL) INTO CANTIDAD FROM TEMPORAL_PEDIDO WHERE FECHA=FECHA_HOY;
RETURN CANTIDAD;

END;
