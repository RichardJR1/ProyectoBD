CREATE SEQUENCE SEQ_ID_CLIENTE 
START WITH 1 
INCREMENT BY 1
NOMAXVALUE; 

CREATE SEQUENCE SEQ_PEDIDO_ID_PEDIDO
START WITH 1 
INCREMENT BY 1
NOMAXVALUE; 

CREATE SEQUENCE SEQ_ID_PROVEEDORES 
START WITH 1 
INCREMENT BY 1
NOMAXVALUE; 



CREATE OR REPLACE TRIGGER TGR_NEW_CLIENTE 
              BEFORE INSERT ON CLIENTES
                     FOR EACH ROW
                            BEGIN
                              SELECT SEQ_ID_CLIENTE.NEXTVAL
                              INTO   :NEW.ID_CLIENTE
                              FROM   DUAL;
                     END;

CREATE OR REPLACE TRIGGER TGR_NEW_PEDIDO
              BEFORE INSERT ON PEDIDO
                     FOR EACH ROW
                            BEGIN
                              SELECT SSEQ_PEDIDO_ID_PEDIDO.NEXTVAL
                              INTO   :NEW.ID_PEDIDO
                              FROM   DUAL;
                     END;

CREATE OR REPLACE TRIGGER TGR_NEW_PROVEEDORES
              BEFORE INSERT ON PROVEEDORES
                     FOR EACH ROW
                            BEGIN
                              SELECT SEQ_ID_PROVEEDORES.NEXTVAL
                              INTO   :NEW.ID_PROVEEDORES
                              FROM   DUAL;
                     END;
                     
                     
                     


CREATE OR REPLACE PACKAGE BODY PKG_PRODUCTOS
    IS
        PROCEDURE AGREGAR_PRODUCTO(NOMBRE VARCHAR2,IMP_PRODUCTO VARCHAR2,TARIFA_IMP NUMBER,DESC_PRODUCTO FLOAT, PRECIO_UNITARIO FLOAT, CATEGORIA_ID NUMBER,PROVEEDOR NUMBER)
        AS
        BEGIN   
            INSERT INTO PRODUCTOS (seq_PRODUCTOS_ID_PRODUCTO.nextval, NOMBRE,IMP_PRODUCTO,TARIFA_IMP,DESC_PRODUCTO, PRECIO_UNITARIO, CATEGORIA_ID,PROVEEDOR) VALUES (ID_PRODUCTO, NOMBRE,IMP_PRODUCTO,TARIFA_IMP,DESC_PRODUCTO, PRECIO_UNITARIO, CATEGORIA_ID,PROVEEDOR);
      END;


END;



CREATE OR REPLACE PACKAGE BODY PKG_PERSONAS
    IS
        PROCEDURE AGREGAR_PERSONAS(CEDULA NUMERIC,NOMBRE VARCHAR2,APELLIDOS VARCHAR2,TELEFONO NUMERIC,CORREO_ELECTRONICO VARCHAR2,DIRECCION VARCHAR2)
        AS
        BEGIN   
            INSERT INTO CLIENTES (CEDULA,NOMBRE,APELLIDOS,TELEFONO,CORREO_ELECTRONICO,DIRECCION) 
VALUES (CEDULA,NOMBRE,APELLIDOS,TELEFONO,CORREO_ELECTRONICO,DIRECCION);
      END;

       PROCEDURE AGREGAR_PROVEEDOR(CEDULA NUMERIC,NOMBRE VARCHAR2,APELLIDOS VARCHAR2,TELEFONO NUMERIC,CORREO_ELECTRONICO VARCHAR2,DIRECCION VARCHAR2)
        AS
        BEGIN   
            INSERT INTO PROVEEDORES (ID_PROVEEDORES NUMERIC,NOMBRE_COMPANIA VARCHAR2,
  TELEFONO NUMERIC,CORREO_ELECTRONICO VARCHAR2,DIRECCION VARCHAR2) VALUES (ID_PROVEEDORES,NOMBRE_COMPANIA,TELEFONO,CORREO_ELECTRONICO,DIRECCION);
      END;
END;



CREATE OR REPLACE PACKAGE BODY PKG_VENTAS
    IS
        PROCEDURE AGREGAR_PRODUCTO(ID_PRODUCTO NUMBER, NOMBRE VARCHAR2,IMP_PRODUCTO VARCHAR2,TARIFA_IMP NUMBER,DESC_PRODUCTO FLOAT, PRECIO_UNITARIO FLOAT, CATEGORIA_ID NUMBER,PROVEEDOR NUMBER)
        AS
        BEGIN   
            INSERT INTO PRODUCTOS (ID_PRODUCTO, NOMBRE,IMP_PRODUCTO,TARIFA_IMP,DESC_PRODUCTO, PRECIO_UNITARIO, CATEGORIA_ID,PROVEEDOR) VALUES (ID_PRODUCTO, NOMBRE,IMP_PRODUCTO,TARIFA_IMP,DESC_PRODUCTO, PRECIO_UNITARIO, CATEGORIA_ID,PROVEEDOR);
      END;


END;
